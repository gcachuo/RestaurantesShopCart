    <div>

        <h2>Ordenar</h2>
        <div>


            <ul>
                <li>
                    <label>Habitacion:</label>
                    <input type="text" id="txtHab" />
                </li>
                <li>
                    <label>ID:</label>
                    <input type="text" id="txtIdSearch" />
                </li>
                <li>
                    <input type="button" id="btnSearch" value="Agregar al carro" />
